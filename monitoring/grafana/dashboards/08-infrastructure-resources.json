            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 536870912,
                "color": "yellow"
              },
              {
                "value": 1073741824,
                "color": "red"
              }
            ]
          }
        }
      }
