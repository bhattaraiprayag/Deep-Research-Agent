{
  "id": null,
  "uid": "business-intelligence",
  "title": "ðŸ“ˆ Business Intelligence & Usage Analytics",
  "description": "High-level metrics for product decisions and growth tracking",
  "tags": [
    "business",
    "analytics",
    "usage",
    "p3"
  ],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "1m",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "Daily Active Research Tasks",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(increase(research_tasks_total[24h])) or vector(0)",
          "legendFormat": "Tasks Today",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0,
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Weekly Growth Rate",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "((sum(increase(research_tasks_total[7d])) - sum(increase(research_tasks_total[7d] offset 7d))) / sum(increase(research_tasks_total[7d] offset 7d))) * 100 or vector(0)",
          "legendFormat": "Growth %",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 0,
                "color": "yellow"
              },
              {
                "value": 10,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Task Completion Rate",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(rate(research_tasks_total{status=\"completed\"}[24h])) / sum(rate(research_tasks_total[24h])) or vector(0)",
          "legendFormat": "Completion Rate",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 0.8,
                "color": "yellow"
              },
              {
                "value": 0.95,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "User Satisfaction Proxy",
      "description": "Completion Rate Ã— Low-Revision Rate",
      "type": "gauge",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "(sum(rate(research_tasks_total{status=\"completed\"}[24h])) / sum(rate(research_tasks_total[24h]))) * (sum(rate(critique_decisions_total{outcome=\"approved\", attempt=\"1\"}[24h])) / sum(rate(critique_decisions_total{attempt=\"1\"}[24h]))) or vector(0)",
          "legendFormat": "Satisfaction Score",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 0.5,
                "color": "yellow"
              },
              {
                "value": 0.7,
                "color": "green"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Daily Task Volume",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(increase(research_tasks_total[1d]))",
          "legendFormat": "Tasks/Day",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 30,
            "drawStyle": "bars"
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Request Rate Over Time",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{handler=\"/api/v1/research\"}[5m]))",
          "legendFormat": "Research Requests/sec",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Task Complexity Distribution",
      "description": "Iteration count as complexity proxy",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 14
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(increase(research_tasks_total{iterations=\"1-2\"}[24h]))",
          "legendFormat": "Simple (1-2 iters)",
          "refId": "A"
        },
        {
          "expr": "sum(increase(research_tasks_total{iterations=\"3-4\"}[24h]))",
          "legendFormat": "Medium (3-4 iters)",
          "refId": "B"
        },
        {
          "expr": "sum(increase(research_tasks_total{iterations=\"5+\"}[24h]))",
          "legendFormat": "Complex (5+ iters)",
          "refId": "C"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "donut",
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 8,
      "title": "Feature Usage (Endpoints)",
      "type": "bargauge",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 14
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum by(handler) (increase(http_requests_total[24h]))",
          "legendFormat": "{{handler}}",
          "refId": "A"
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "id": 9,
      "title": "Task Status Breakdown (24h)",
      "type": "piechart",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 14
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum by(status) (increase(research_tasks_total[24h]))",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        },
        "pieType": "pie",
        "tooltip": {
          "mode": "single"
        }
      }
    },
    {
      "id": 10,
      "title": "Peak Usage Heatmap",
      "description": "Requests by hour-of-day",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 22
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{handler=\"/api/v1/research\"}[1h]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 50,
            "gradientMode": "scheme"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Total Cost (24h)",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 0,
        "y": 30
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "(sum(increase(llm_tokens_total{model=\"gpt-4o\", type=\"prompt\"}[24h])) * 5 / 1000000 + sum(increase(llm_tokens_total{model=\"gpt-4o\", type=\"completion\"}[24h])) * 15 / 1000000 + sum(increase(llm_tokens_total{model=\"gpt-4o-mini\", type=\"prompt\"}[24h])) * 0.15 / 1000000 + sum(increase(llm_tokens_total{model=\"gpt-4o-mini\", type=\"completion\"}[24h])) * 0.6 / 1000000) or vector(0)",
          "legendFormat": "Total Cost",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 4
        }
      }
    },
    {
      "id": 12,
      "title": "Cost per Task",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 8,
        "y": 30
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "((sum(increase(llm_tokens_total{model=\"gpt-4o\", type=\"prompt\"}[24h])) * 5 / 1000000 + sum(increase(llm_tokens_total{model=\"gpt-4o\", type=\"completion\"}[24h])) * 15 / 1000000 + sum(increase(llm_tokens_total{model=\"gpt-4o-mini\", type=\"prompt\"}[24h])) * 0.15 / 1000000 + sum(increase(llm_tokens_total{model=\"gpt-4o-mini\", type=\"completion\"}[24h])) * 0.6 / 1000000) / sum(increase(research_tasks_total{status=\"completed\"}[24h]))) or vector(0)",
          "legendFormat": "Cost/Task",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD",
          "decimals": 4,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 0.1,
                "color": "yellow"
              },
              {
                "value": 0.5,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "title": "Avg Report Quality",
      "description": "Based on first-pass approval and source diversity",
      "type": "stat",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 16,
        "y": 30
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${datasource}"
      },
      "targets": [
        {
          "expr": "(avg(report_source_diversity) + (sum(rate(critique_decisions_total{outcome=\"approved\", attempt=\"1\"}[24h])) / sum(rate(critique_decisions_total{attempt=\"1\"}[24h])))) / 2 or vector(0)",
          "legendFormat": "Quality Score",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "textMode": "value_and_name",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 0.5,
                "color": "yellow"
              },
              {
                "value": 0.7,
                "color": "green"
              }
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "options": [],
        "refresh": 1,
        "regex": ""
      }
    ]
  },
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": [
      "5s",
      "10s",
      "30s",
      "1m",
      "5m",
      "15m",
      "30m",
      "1h",
      "2h",
      "1d"
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
